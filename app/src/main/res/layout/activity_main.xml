<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

<!-- profile picture -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_pfp">
        <ImageView
            android:id="@+id/iv_pfp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_default_pfp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_pfp"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_camera_button"
        >
        <Button
            android:id="@+id/button_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/camera"
            />
    </LinearLayout>

<!-- names -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_camera_button"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_first_name"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="22dp"
            android:text="@string/first_name"
            android:id="@+id/tv_first_name"
            />
        <EditText
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:id="@+id/et_first_name"
            android:inputType="textPersonName"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_first_name"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_middle_name"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="@string/middle_name"
            android:id="@+id/tv_middle_name"
            />
        <EditText
            android:id="@+id/et_middle_name"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_middle_name"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/ll_last_name"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="23dp"
            android:text="@string/last_name"
            android:id="@+id/tv_last_name"
            />

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="310dp"
            android:layout_height="48dp"
            android:inputType="textPersonName"
            />
    </LinearLayout>

<!-- submit -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_last_name"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="10dp"
        android:id="@+id/ll_submit"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_camera"
            android:text="@string/submit"
            android:id="@+id/button_submit"
            />
    </LinearLayout>

</RelativeLayout>